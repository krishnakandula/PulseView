<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PulseView">
        <!-- Background -->
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundEdgeRadius" format="dimension"/>
        <attr name="backgroundEdgeWidth" format="dimension"/>

        <!-- Grid -->
        <attr name="gridColor" format="color"/>
        <attr name="horizontalLines" format="integer"/>
        <attr name="verticalLines" format="integer"/>

        <!-- Point -->
        <attr name="pointRadius" format="dimension"/>
        <attr name="pointMaxRadius" format="dimension"/>
        <attr name="pointColor" format="color"/>
        <attr name="pointSecondaryColor" format="color"/>
        <attr name="pointGradient" format="boolean"/>
    </declare-styleable>
</resources>
